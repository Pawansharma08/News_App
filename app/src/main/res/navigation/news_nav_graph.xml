<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/news_nav_graph"
    app:startDestination="@id/breakingNewsfragment2">

    <fragment
        android:id="@+id/breakingNewsfragment2"
        android:name="com.example.newsappf.Fragments.BreakingNewsfragment"
        android:label="fragment_breaking_newsfragment"
        tools:layout="@layout/fragment_breaking_newsfragment" >
        <action
            android:id="@+id/action_breakingNewsfragment2_to_articleFrag2"
            app:destination="@id/articleFrag2"
            app:enterAnim="@anim/slide_in_rigth"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_rigth"
            />
    </fragment>
    <fragment
        android:id="@+id/articleFrag2"
        android:name="com.example.newsappf.Fragments.ArticleFrag"
        android:label="fragment_article"
        tools:layout="@layout/fragment_article" />
    <fragment
        android:id="@+id/savedNewsFragment2"
        android:name="com.example.newsappf.Fragments.SavedNewsFragment"
        android:label="fragment_saved_news"
        tools:layout="@layout/fragment_saved_news" >
        <action
            android:id="@+id/action_savedNewsFragment2_to_articleFrag2"
            app:destination="@id/articleFrag2"
            app:enterAnim="@anim/slide_in_rigth"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_rigth"
            />
    </fragment>
    <fragment
        android:id="@+id/searchNewsfrag2"
        android:name="com.example.newsappf.Fragments.SearchNewsfrag"
        android:label="fragment_search_newsfrag"
        tools:layout="@layout/fragment_search_newsfrag" >
        <action
            android:id="@+id/action_searchNewsfrag2_to_articleFrag2"
            app:destination="@id/articleFrag2"
            app:enterAnim="@anim/slide_in_rigth"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_rigth"
            />
    </fragment>
</navigation>